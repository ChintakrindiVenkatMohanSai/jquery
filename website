    const products = [
      {name: "Smart Watch", price: 2999, img: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9"},
      {name: "Headphones", price: 1999, img: "https://images.unsplash.com/photo-1518444021358-3e4e0bdd3a2a"},
      {name: "Sneakers", price: 2499, img: "https://images.unsplash.com/photo-1528701800489-20be0b02f47e"},
      {name: "Backpack", price: 1499, img: "https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f"}
    ];

    const list = document.getElementById("productList");

    products.forEach(p => {
      list.innerHTML += `
        <div class="product-card">
          <img src="${p.img}" alt="product" />
          <h3>${p.name}</h3>
          <p>Price: ₹${p.price}</p>
          <button onclick="alert('${p.name} added to cart!')">Add to Cart</button>
        </div>`;
    });
  </script>
